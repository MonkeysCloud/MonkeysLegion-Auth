{
    "name": "monkeyscloud/monkeyslegion-auth",
    "description": "Comprehensive authentication and authorization package with JWT, RBAC, 2FA, OAuth, and API keys",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MonkeysLegion",
            "email": "jorge@monkeys.cloud"
        }
    ],
    "require": {
        "php": "^8.4",
        "firebase/php-jwt": "^6.10",
        "monkeyscloud/monkeyslegion-cli": "^1.0",
        "monkeyscloud/monkeyslegion-database": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "ext-redis": "Required for Redis-based rate limiting and token storage",
        "nyholm/psr7": "PSR-7 implementation for middleware responses"
    },
    "autoload": {
        "psr-4": {
            "MonkeysLegion\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonkeysLegion\\Auth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests",
        "check": [
            "@cs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
